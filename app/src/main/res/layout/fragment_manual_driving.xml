<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.lukaskrabbe.microcar.ManualDrivingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="455dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
            tools:layout_editor_absoluteX="4dp">

            <SeekBar
                android:id="@+id/steer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="36dp"
                android:progress="50" />

            <SeekBar
                android:id="@+id/speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/steer"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="177dp"
                android:progress="50"
                android:rotation="270" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="151dp"
                android:layout_marginRight="151dp"
                android:text="-"
                android:layout_alignBottom="@+id/seekBar3"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/horn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Horn" />

                <ToggleButton
                    android:id="@+id/light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOff="Light Off"
                    android:textOn="Light On" />

                <ToggleButton
                    android:id="@+id/blink_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOff="Blink L"
                    android:textOn="Blink L" />

                <ToggleButton
                    android:id="@+id/blink_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOff="Blink R"
                    android:textOn="Blink R" />

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>


</FrameLayout>
